{
  "manifest_version": 3,
  "name": "JobTrakr",
  "version": "1.0.0",
  "description": "Easily track and manage your job applications from across the web",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["*://*.linkedin.com/*", "*://*.indeed.com/*"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content/linkedin.js"]
    },
    {
      "matches": ["*://*.indeed.com/viewjob*", "*://*.indeed.com/job/*"],
      "js": ["content/indeed.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "onboarding/*"],
      "matches": ["*://*.linkedin.com/*", "*://*.indeed.com/*"]
    }
  ],
  "options_page": "options/options.html"
}
